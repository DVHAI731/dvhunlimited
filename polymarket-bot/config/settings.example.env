# Polymarket Bot Configuration
# Copy to .env and fill in your values

# ===================
# POLYMARKET SETTINGS
# ===================

# Your wallet private key (WITHOUT 0x prefix)
# Generate a new wallet for trading - don't use your main wallet
POLYMARKET_PRIVATE_KEY=your_private_key_here

# Your funder address (the address that holds USDC.e)
POLYMARKET_FUNDER=0xYourFunderAddressHere

# Chain ID (137 = Polygon Mainnet)
POLYMARKET_CHAIN_ID=137

# CLOB API endpoint
POLYMARKET_CLOB_URL=https://clob.polymarket.com

# Gamma API endpoint (market metadata)
POLYMARKET_GAMMA_URL=https://gamma-api.polymarket.com

# ===================
# TRADING SETTINGS
# ===================

# Paper trading mode (true = no real trades)
PAPER_TRADE=true

# Starting bankroll for position sizing (in USD)
BANKROLL=1000

# Maximum position per market (as fraction of bankroll)
MAX_POSITION_FRACTION=0.05

# Minimum arbitrage spread to trigger (e.g., 0.02 = 2%)
MIN_ARBITRAGE_SPREAD=0.02

# ===================
# SCANNING SETTINGS
# ===================

# How often to scan markets (seconds)
SCAN_INTERVAL=5

# Minimum market volume to consider (USD)
MIN_MARKET_VOLUME=10000

# ===================
# NOTIFICATIONS (Optional)
# ===================

# Telegram bot token for alerts
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# ===================
# ADVANCED
# ===================

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Binance API for latency arbitrage (Phase 2)
BINANCE_API_KEY=
BINANCE_SECRET=
